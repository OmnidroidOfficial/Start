@page "/"
@inject NavigationManager UriHelper

<PageTitle>Index</PageTitle>

<h1>Welcome to Omnidroid</h1>

<p>Omnidroid Start is used to create and configure new Omnidroid ID's.</p>
<br />
<p>Start a new configuration, or proceed with an existing one.</p>

<button @onclick=@NxtStart>Start</button>
<button @onclick=@NxtContinue>Continue</button>

@code {
    void NxtStart()
    {
        UriHelper.NavigateTo("start_1");
    }

    void NxtContinue()
    {
        UriHelper.NavigateTo("continue_1");
    }
}
